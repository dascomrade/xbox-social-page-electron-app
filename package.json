      "**/*",
      "!node_modules/**/*",
      "node_modules/jquery/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  }
}
